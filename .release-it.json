{
  "pkgFiles": ["package.json"],
  "changelogCommand": "git log --pretty=format:\"* %s (%h)\" [REV_RANGE]",
  "requireCleanWorkingDir": false,
  "src": {
    "commit": true,
    "commitMessage": "v%s",
    "tag": true,
    "tagName": "%s",
    "tagAnnotation": "v%s",
    "push": true
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": true
  },
  "prompt": {
    "src": {
      "status": false,
      "commit": true,
      "tag": true,
      "push": true,
      "release": true,
      "publish": true
    }
  }
}
